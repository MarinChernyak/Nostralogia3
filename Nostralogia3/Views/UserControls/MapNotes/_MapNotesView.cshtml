
@using Nostralogia3.Extensions
@model Nostralogia3.ViewModels.MapNotes.MapNotesVM

<div class="container">
    <div class="container border border-secondary rounded BgColorControls">
        <div class="container">
            <div class="row mb-1">
                <div class="h5 col-4 mt-3 font-weight-bold">
                    Notes of the map
                </div>
                <div class="col-6"></div>
                <div class="col-2 text-right">
                @using(Html.BeginForm("CreateNewMapNote","PersonalNotes",new { IdRef = @Model.MapNote.IdPerson }, FormMethod.Post, null,null))
                {                
                    <button type="submit" class="btn btn-default" id="AddMapNote">
                        <img src="~/Images/Partials/addMore.png" height="40" width="40" />
                    </button>                
                }
                </div>
            </div>
            <div class="row">
                <div class="container pre-scrollable" style="max-height:500px;">
                    @foreach (var item in @Model._NotesDataList)
                    {
                    <div class="row">
                        @await Html.PartialAsync("~/Views/UserControls/MapNotes/_SingleMapNoteView.cshtml", item, nameof(item))
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
