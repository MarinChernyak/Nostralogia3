
@{
    ViewData["Title"] = "DataPerson";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using Nostralogia3.Models.UserControls
@model Nostralogia3.Models.DataWorking.MPersonalData

<div class="row">
    <div class="col-md-7 bg-dark">
        @using (Html.BeginForm("MyAccount", "LogIn", FormMethod.Post))
        {
            <section class="bg-dark ">
                <div class="container">
                    <div class="col-md-10 form-group">
                        <label class="text-danger">@Model.ErrorMessage</label>
                    </div>
                    <fieldset>
                        <legend class="text-warning ml-lg-4">Personal Data Form</legend>

                        <div class="col-sm-5 form-group">
                            @Html.LabelFor(x => x.FirstName)
                            @Html.EditorFor(x => x.FirstName)
                        </div>
                        <div class="col-md-5 form-group">
                            @Html.LabelFor(x => x.SecondName)
                            @Html.EditorFor(x => x.SecondName)
                        </div>


                        @await Html.PartialAsync("~/Views/UserControls/_SimpleCalendarView.cshtml", Model.SimpleCalendarModel)

                        @await Html.PartialAsync("~/Views/UserControls/_SimpleTimePickerView.cshtml", Model.TimeFrom)
                    <div id="timeTo">
                        @await Html.PartialAsync("~/Views/UserControls/_SimpleTimePickerView.cshtml", Model.TimeTo)
                    </div>
                        @await Html.PartialAsync("~/Views/UserControls/_EventPlaceView.cshtml", Model.EventPlaceModel)

                        <div class="col-md-5 form-group">
                            @Html.LabelFor(x => x.AdditionalHours)
                            @Html.DropDownListFor(x => x.AdditionalHours, Model.TimeShifts, null, new { id = "cmbTimeShifts" })
                        </div>
                        <div class="col-md-1 form-group">
                            @Html.LabelFor(x => x.SourceBirthTime)
                            @Html.DropDownListFor(x => x.SourceBirthTime, Model.SourceColection, null, new { id = "cmbSource" })
                        </div>
                        <div class="col-md-1 form-group">
                            @Html.LabelFor(x => x.Sex)
                            @Html.DropDownListFor(x => x.Sex, Model.SexCollection, null, new { id = "cmbSex" })
                        </div>





                        <div class="col-md-2 form-group">
                            @Html.LabelFor(x => x.Email)
                            @Html.EditorFor(x => x.Email)
                            <div class="row ml-lg-1">
                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-lg-5">
                            <div class="col-md-1 form-group ">
                                <button type="submit" class="btn btn-outline-warning">Save</button>
                            </div>
                            <div class="col-md-1 form-group ">
                                <button type="button" class="btn btn-outline-warning">Cancel</button>
                            </div>
                            @*<div class="col-md-2 form-group">
                <button type="button" class="btn btn-outline-info">Edit Events</button>
            </div>
            <div class="col-md-3 form-group">
                <button type="button" class="btn btn-outline-info">Edit Keywords</button>
            </div>
            <div class="col-md-3 form-group">
                <button type="button" class="btn btn-outline-info">Edit Pictures</button>
            </div>*@
                        </div>
                    </fieldset>

                </div>
            </section>
            @*@Html.HiddenFor(x => x.Id)*@
        }

    </div>
    <div class="col-md-5 bg-secondary" style="min-height:300px;">
        <div class="row">
            @await Html.PartialAsync("~/Views/UserControls/KeyWordsManagerMain.cshtml", Model.KWCollection)
        </div>
    </div>
</div>

