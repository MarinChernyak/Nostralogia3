@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using Nostralogia3.Extensions

@model Nostralogia3.ViewModels.PictureViewer.PicturesViewerEditViewModel
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<div class="container">
    <div class="row  mt-2 w-100">
        @*@await Html.PartialAsync("~/Views/UserControls/_PictureViewerView.cshtml", Model.ViewModel, nameof(Model.ViewModel))*@
    </div>
</div>
<div class="container">
    <div class="row  mt-2 w-100">
        <form asp-controller="PicturesViewer" asp-action="UploadFile" method="post" class="mt-3" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="NewPictureData.Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        @*<input asp-for="Photo" class="form-control custom-file-input" id="inPhoto" />*@
                        <input asp-for="NewPictureData.Photo" type='file' class="form-control custom-file-input"/>
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Upload Image</button>
                </div>
            </div>
        </form>
    </div>
</div>
 
<script>
    $(document).ready(function () {
        $('.custom-file-input').on('change', function () {
            var filename = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(filename);
        });
    });
</script>
